<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_stars_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="5"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pb_count_percentage_5"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:progressTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="@id/tv_stars_5"
        app:layout_constraintEnd_toStartOf="@+id/barrier_counts"
        app:layout_constraintStart_toEndOf="@id/tv_stars_5"
        app:layout_constraintTop_toTopOf="@id/tv_stars_5"
        tools:progress="50" />

    <TextView
        android:id="@+id/tv_count_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/pb_count_percentage_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pb_count_percentage_5"
        tools:text="5" />

    <TextView
        android:id="@+id/tv_stars_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="4"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_stars_5" />

    <ProgressBar
        android:id="@+id/pb_count_percentage_4"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:progressTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="@id/tv_stars_4"
        app:layout_constraintEnd_toStartOf="@+id/barrier_counts"
        app:layout_constraintStart_toEndOf="@id/tv_stars_4"
        app:layout_constraintTop_toTopOf="@id/tv_stars_4"
        tools:progress="50" />

    <TextView
        android:id="@+id/tv_count_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/pb_count_percentage_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pb_count_percentage_4"
        tools:text="4" />

    <TextView
        android:id="@+id/tv_stars_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="3"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_stars_4" />

    <ProgressBar
        android:id="@+id/pb_count_percentage_3"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:progressTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="@id/tv_stars_3"
        app:layout_constraintEnd_toStartOf="@+id/barrier_counts"
        app:layout_constraintStart_toEndOf="@id/tv_stars_3"
        app:layout_constraintTop_toTopOf="@id/tv_stars_3"
        tools:progress="50" />

    <TextView
        android:id="@+id/tv_count_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/pb_count_percentage_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pb_count_percentage_3"
        tools:text="3" />

    <TextView
        android:id="@+id/tv_stars_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="2"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_stars_3" />

    <ProgressBar
        android:id="@+id/pb_count_percentage_2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:progressTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="@id/tv_stars_2"
        app:layout_constraintEnd_toStartOf="@+id/barrier_counts"
        app:layout_constraintStart_toEndOf="@id/tv_stars_2"
        app:layout_constraintTop_toTopOf="@id/tv_stars_2"
        tools:progress="50" />

    <TextView
        android:id="@+id/tv_count_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/pb_count_percentage_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pb_count_percentage_2"
        tools:text="2" />

    <TextView
        android:id="@+id/tv_stars_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="1"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_stars_2" />

    <ProgressBar
        android:id="@+id/pb_count_percentage_1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:progressTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="@id/tv_stars_1"
        app:layout_constraintEnd_toStartOf="@+id/barrier_counts"
        app:layout_constraintStart_toEndOf="@id/tv_stars_1"
        app:layout_constraintTop_toTopOf="@id/tv_stars_1"
        tools:progress="50" />

    <TextView
        android:id="@+id/tv_count_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/pb_count_percentage_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pb_count_percentage_1"
        tools:text="1" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="tv_stars_5,tv_stars_4,tv_stars_3,tv_stars_2,tv_stars_1" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="tv_count_5,tv_count_4,tv_count_3,tv_count_2,tv_count_1" />

</androidx.constraintlayout.widget.ConstraintLayout>